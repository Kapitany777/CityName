<UserControl x:Class="CityName.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Width="850" Height="400" Loaded="UserControl_Loaded">

    <Grid x:Name="LayoutRoot" Background="#ff071a2e">
        <Grid.RowDefinitions>
            <RowDefinition Height="350" />
            <RowDefinition />
        </Grid.RowDefinitions>
        
        <Image Source="/CityName;component/nevtabla.png" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10 10 10 10" />
        <TextBlock x:Name="TextBlockCityName" Text="Városnév" Foreground="Black" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" FontFamily="Arial" FontSize="50" />
        
        <Button Content="Új városnév generálása" Grid.Row="1" Width="200" Margin="10 5 10 15" Click="Button_Click" />
    </Grid>
</UserControl>
